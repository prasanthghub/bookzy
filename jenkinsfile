pipeline {
    agent any
    
    stages {
        stage('Build') {
            agent {
                label 'slave-1'
            }
            steps {
                // Build tasks on slave-1
                // Example: Checkout code, compile, etc.
            }
        }
        
        stage('Test') {
            agent {
                label 'slave-2'
            }
            steps {
                // Test tasks on slave-2
                // Example: Run unit tests, integration tests, etc.
            }
        }
        
        stage('Deploy') {
            agent {
                label 'slave-1 || slave-2'
            }
            steps {
                // Deployment tasks on either slave-1 or slave-2
                // Example: Deploy to AWS, update servers, etc.
            }
        }
    }
    
    // Only run the pipeline on the specified branch
    options {
        skipDefaultCheckout(true)
    }
    stages {
        stage('Checkout') {
            agent any
            steps {
                git branch: 'boozky', credentialsId: 'prasanthghub', url: 'https://github.com/prasanthghub/bookzy.git'
            }
        }
    }
}
